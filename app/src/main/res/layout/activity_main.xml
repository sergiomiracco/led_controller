<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/color_circle"
        android:layout_marginVertical="20dp"
        android:src="@drawable/rgb_circle"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.4"
        android:contentDescription="@string/description_color_circle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/color_circle"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp">

        <RadioGroup
            android:id="@+id/channel_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/inside_radio"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="inside"
                android:textColor="#ffffff" />

            <RadioButton
                android:id="@+id/outside_radio"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="outside"
                android:textColor="#ffffff" />

            <RadioButton
                android:id="@+id/all_radio"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="all"
                android:textColor="#ffffff" />
        </RadioGroup>


        <LinearLayout
                android:layout_height="8dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/colorDisplayInside"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

            <ImageView
                    android:id="@+id/colorDisplayOutside"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

            <ImageView
                    android:id="@+id/colorDisplayAll"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                    android:id="@+id/colorcall_inside"
                    android:layout_height="wrap_content"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="R G B"
                    android:textColor="@android:color/darker_gray" />

            <TextView
                    android:id="@+id/colorcall_outside"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:gravity="center"
                    android:hint="R G B"
                    android:textColor="@android:color/darker_gray" />

            <TextView
                    android:id="@+id/colorcall_all"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:gravity="center"
                    android:hint="R G B"
                    android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                    android:id="@+id/colorButton1"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="8dp"/>

            <Button
                    android:id="@+id/colorButton2"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="8dp"/>

            <Button
                    android:id="@+id/colorButton3"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shutter_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SHUTTER" />

            <Switch
                    android:id="@+id/shutter_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <SeekBar
                    android:id="@+id/flashspeed"
                    android:layout_height="wrap_content"
                    android:layout_width="0px"
                    android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/rainbow_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RAINBOW" />


            <Switch
                    android:id="@+id/rainbow_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <SeekBar
                    android:id="@+id/rainbowspeed"
                    android:layout_height="wrap_content"
                    android:layout_width="0px"
                    android:layout_weight="2"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>